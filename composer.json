{
    "name": "bgsu-lits/framework",
    "description": "Framework for applications based on Slim.",
    "license": "MIT",
    "authors": [
        {
            "name": "John Kloor",
            "email": "kloor@bgsu.edu"
        }
    ],
    "require": {
        "php": "^7.4",
        "middlewares/whoops": "^2.0",
        "monolog/monolog": "^2.0",
        "php-di/php-di": "^6.0",
        "psr/container": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^1.1",
        "psr7-sessions/storageless": "^8.0",
        "slim/http": "^1.1",
        "slim/psr7": "^1.0",
        "slim/slim": "^4.2",
        "thecodingmachine/safe": "^1.0",
        "twig/twig": "^3.1",
        "ulrichsg/getopt-php": "^3.4"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3",
        "neronmoon/scriptsdev": "^0.1.9",
        "phpunit/phpunit": "^9",
        "roave/security-advisories": "dev-master"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Lits\\": "src/Lits"
        },
        "exclude-from-classmap": [
            "/src/Lits/Test/"
        ]
    },
    "extra": {
        "scripts-dev": {
            "post-install-cmd": [
                "@composer bin all install --ansi"
            ],
            "post-update-cmd": [
                "@composer bin all update --ansi"
            ],
            "phpcbf": "phpcbf ./ --standard=phpcs.xml",
            "phpcs": "phpcs ./ --standard=phpcs.xml",
            "phplint": "phplint ./ --exclude=vendor",
            "phpstan": "phpstan analyse -c phpstan.neon",
            "phpunit": "phpunit -c phpunit.xml",
            "psalm": "psalm -c psalm.xml",
            "test": [
                "@phplint",
                "@phpcs",
                "@phpstan",
                "@psalm",
                "@phpunit"
            ],
            "twigcs": "twigcs ./template"
        }
    }
}
